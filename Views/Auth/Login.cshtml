@model NotifyHub.Models.ViewModels.LoginViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body class="bg-light d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg p-4 rounded-4" style="width: 350px;">
        <div class="card-body text-center">
            <h2 class="fw-bold text-primary">SmartThought</h2>
            <h4 class="text-secondary mb-4">NOTIFYHUB</h4>

            @using (Html.BeginForm("Login", "Auth", FormMethod.Post))
            {
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="mb-3 text-start">
                    @Html.LabelFor(model => model.Username, new { @class = "form-label fw-semibold" })
                    @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter your username" } })
                    @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger pt-2" })
                </div>

                <div class="mb-3 text-start">
                    @Html.LabelFor(model => model.Password, new { @class = "form-label fw-semibold" })
                    @Html.PasswordFor(model => model.Password, new { @class = "form-control", placeholder = "Enter your password" })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger pt-2" })
                </div>

                <button type="submit" class="btn btn-primary w-100 py-2 mb-2">Login</button>
                @Html.ActionLink("Forgot Password", "ForgotPassword", "", new { @class = "link-primary text-decoration-none" })
            }
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>

</html>
